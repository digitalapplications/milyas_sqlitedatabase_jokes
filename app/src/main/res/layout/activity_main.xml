<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.l400.taskno2.MainActivity"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/jokesmain"
        android:background="@drawable/foredittext"
        android:layout_alignParentTop="true" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Click For Jokes"
        android:background="@drawable/newbtn"
        android:id="@+id/btnclickforjokes"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/btnenterjoke"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Enter New Joke"
        android:id="@+id/btnenterjoke"
        android:layout_below="@+id/btnclickforjokes"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="@drawable/forbutton"
        android:layout_marginTop="91dp" />
</RelativeLayout>
